{
  "manifest_version": 3,
  "name": "Startempire Wire Network",
  "version": "0.1.0",
  "description": "Connect with the Startempire Wire community, discover opportunities and share resources",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Startempire Wire Network"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "chrome_url_overrides" : {
    "newtab": "startempire-wire-network.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.startempirewire.com/*",
        "*://*.startempirewire.network/*",
        "*://*/*"
      ],
      "js": ["contentScript.js"],
      "css": ["styles/app.css"]
    }
  ],
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "identity",
    "webRequest",
    "notifications",
    "webNavigation",
    "identity.email"
  ],
  "host_permissions": [
    "https://startempirewire.com/*",
    "https://startempirewire.network/*",
    "https://discord.com/api/*",
    "*://*.buddyboss.com/*",
    "*://*.memberpress.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "oauth2": {
    "client_id": "${WORDPRESS_CLIENT_ID}",
    "scopes": [
      "openid",
      "identify",
      "profile",
      "network_access",
      "https://*.startempirewire.com/*",
      "https://*.startempirewire.network/*",
      "https://discord.com/api/oauth2",
      "https://*.startempirewire.com/wp-json/*",
      "guilds",
      "guilds.members.read",
      "discord:guilds",
      "discord:guilds.join",
      "discord:guilds.members.read",
      "buddyboss_platform",
      "memberpress"
    ]
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "tier_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
